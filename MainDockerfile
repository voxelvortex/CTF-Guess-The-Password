FROM debian:latest

# import CTF-Guess-ThePassword
ADD ./CTF-Guess-The-Password /CTF
WORKDIR /CTF

# update and install needed stuff
RUN apt-get update &&\
    apt-get install -y git python3-full python3-pip python3-wheel


STOPSIGNAL SIGKILL
# start the server
ENTRYPOINT python3 ./server.py

# Expose necessary ports
EXPOSE 9009/tcp
